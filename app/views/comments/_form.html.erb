<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.text_field :commenter, placeholder: "Username"  %>
  </p>
  <p>
    <%= f.text_area :content, :cols => "115", :rows => "6", placeholder: "Write a comment..." %>
  </p>
  <p>
    <%= f.submit 'POST COMMENT', :class => 'button' %>
  </p>
<% end %>
